<?xml version="1.0"?>
<config>
	<default>
		<sociallogin_options>
			<messages>
				<loginEnable>1</loginEnable>
				<loginradius_title>Login with your social account</loginradius_title>
				<showdefault>1</showdefault>
				<socialLinking>1</socialLinking>
				<redirect>account</redirect>
				<aboveLogin>1</aboveLogin>
				<aboveRegister>1</aboveRegister>
			</messages>
			<email_settings>
				<profileFieldsRequired>0</profileFieldsRequired>
				<emailrequired>0</emailrequired>
				<verificationText>Please click on the following link or paste it in browser to verify your email:-</verificationText>
				<popupText>Please enter your email to proceed</popupText>
				<popupError>The email you entered is already registered or invalid. Please enter a valid email.</popupError>
				<notifyUser>1</notifyUser>
				<notifyAdmin>0</notifyAdmin>
				<notifyAdminText>New customer has been registered to your store with following details:-</notifyAdminText>
			</email_settings>
			<sharing>
				<shareEnable>1</shareEnable>
				<sharingTitle>Share it now!</sharingTitle>
				<sharingTheme>horizontal</sharingTheme>
				<horizontalSharing>32</horizontalSharing>
				<verticalSharing>32</verticalSharing>
				<sharingVerticalAlignment>top_left</sharingVerticalAlignment>
				<sharingProvidersHidden>facebook,twitter,googleplus,linkedin,print,email</sharingProvidersHidden>
				<shareProduct>1</shareProduct>
				<shareSuccess>1</shareSuccess>
			</sharing>
			<counter>
				<counterEnable>1</counterEnable>
				<counterTitle>Share it now!</counterTitle>
				<counterTheme>horizontal</counterTheme>
				<horizontalCounter>vertical</horizontalCounter>
				<verticalCounter>vertical</verticalCounter>
				<counterVerticalAlignment>top_left</counterVerticalAlignment>
				<counterProvidersHidden>Facebook Like,Google+ +1,LinkedIn Share,Twitter Tweet</counterProvidersHidden>
				<counterProduct>1</counterProduct>
				<counterSuccess>1</counterSuccess>
			</counter>
		</sociallogin_options>
	</default>   
    <modules>
        <Loginradius_Sociallogin>
            <version>3.0.0</version>
        </Loginradius_Sociallogin>
    </modules>
	<frontend>
	<layout>
            <updates>
                <sociallogin>
                    <file>sociallogin.xml</file>
                </sociallogin>
            </updates>
        </layout>
        <translate>
            <modules>
                <Loginradius_Sociallogin>
                    <files>
                        <default>Loginradius_Sociallogin.csv</default>
                    </files>
                </Loginradius_Sociallogin>
            </modules>
        </translate>
        <routers>
            <sociallogin>
                <use>standard</use>
                <args>
                    <module>Loginradius_Sociallogin</module>
                    <frontName>sociallogin</frontName>
                </args>
            </sociallogin>
        </routers>  
    </frontend>
	<admin>
        <routers>
			<sociallogin>
				<use>admin</use>
				<args>
					<module>Loginradius_Sociallogin</module>
					<frontName>sociallogin admin</frontName>
				</args>
			</sociallogin>
        </routers>
    </admin>
	<adminhtml>
	<acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <sociallogin_options>
                                            <title>Store Social login Module Section</title>
                                        </sociallogin_options>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
		
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Loginradius_Sociallogin>
							<title>Sociallogin Module</title>
							<sort_order>10</sort_order>
						</Loginradius_Sociallogin>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<sociallogin>
					<file>loginradius_sociallogin.xml</file>
				</sociallogin>
			</updates>
		</layout>
    </adminhtml>   
	<global>
	<models>
            <sociallogin>
                <class>Loginradius_Sociallogin_Model</class>
                <resourceModel>sociallogin_mysql4</resourceModel>
            </sociallogin>
            <sociallogin_mysql4>
                <class>Loginradius_Sociallogin_Model_Mysql4</class>
                <entities>
                    <sociallogin>
                        <table>sociallogin</table>
                    </sociallogin>
                </entities>
            </sociallogin_mysql4>
        </models>
        <resources>
            <sociallogin_setup>
                <setup>
                    <module>Loginradius_Sociallogin</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </sociallogin_setup>
            <sociallogin_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </sociallogin_write>
            <sociallogin_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </sociallogin_read>
        </resources>
		
	<blocks>
            <sociallogin>
                <class>Loginradius_Sociallogin_Block</class>
            </sociallogin>
    </blocks>
	<helpers>
            <sociallogin>
                <class>Loginradius_Sociallogin_Helper</class>
            </sociallogin>
    </helpers>
	</global>
</config>